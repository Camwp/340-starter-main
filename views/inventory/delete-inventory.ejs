<section class="container">
    <h1>
        <%= title %>
    </h1>

    <% if (typeof notice !=="undefined" && notice && notice.length) { %>
        <p class="notice">
            <%= notice[0] %>
        </p>
        <% } %>

            <p>Are you sure you want to delete this vehicle?</p>

            <ul class="summary">
                <li><strong>Make/Model:</strong>
                    <%= invData.inv_make %>
                        <%= invData.inv_model %>
                </li>
                <li><strong>Year:</strong>
                    <%= invData.inv_year %>
                </li>
                <li><strong>Price:</strong>
                    <%= invData.inv_price %>
                </li>
                <li><strong>Miles:</strong>
                    <%= invData.inv_miles %>
                </li>
            </ul>

            <form method="post" action="/inv/delete/<%= invData.inv_id %>">
                <button type="submit" class="btn btn-danger">Yes, delete</button>
                <a href="/inv/" class="btn btn-secondary">Cancel</a>
            </form>
</section>