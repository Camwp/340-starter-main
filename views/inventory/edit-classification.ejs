<section class="container">
    <h1>Edit Classification</h1>

    <% if (typeof notice !=="undefined" && notice && notice.length) { %>
        <p class="notice">
            <%= notice[0] %>
        </p>
        <% } %>

            <% if (errors && errors.length) { %>
                <div class="errors">
                    <ul>
                        <% errors.forEach(e=> { %><li>
                                <%= e.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>

                    <form method="post" action="/inv/edit-classification/<%= classification.classification_id %>">
                        <div class="form-control">
                            <label for="classification_name">Name</label>
                            <input id="classification_name" name="classification_name" required
                                value="<%= classification.classification_name %>" />
                        </div>

                        <div class="form-actions" style="margin-top:1rem;">
                            <button type="submit" class="btn">Save</button>
                            <a href="/inv/classifications" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
</section>