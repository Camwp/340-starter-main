<section class="container">
    <h1>
        <%= title %>
    </h1>

    <% if (typeof notice !=="undefined" && notice && notice.length) { %>
        <p class="notice">
            <%= notice[0] %>
        </p>
        <% } %>

            <% if (errors && errors.length) { %>
                <div class="errors">
                    <ul>
                        <% errors.forEach(e=> { %><li>
                                <%= e.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>

                    <form id="updateForm" method="post" action="/inv/edit/<%= invData.inv_id %>">
                        <div class="form-control">
                            <label for="inv_make">Make</label>
                            <input id="inv_make" name="inv_make" required value="<%= invData.inv_make %>">
                        </div>

                        <div class="form-control">
                            <label for="inv_model">Model</label>
                            <input id="inv_model" name="inv_model" required value="<%= invData.inv_model %>">
                        </div>

                        <div class="form-control">
                            <label for="inv_year">Year</label>
                            <input id="inv_year" name="inv_year" type="number" required value="<%= invData.inv_year %>">
                        </div>

                        <div class="form-control">
                            <label for="classification_id">Classification</label>
                            <%- classificationList %>
                        </div>

                        <div class="form-control">
                            <label for="inv_price">Price</label>
                            <input id="inv_price" name="inv_price" type="number" step="0.01" required
                                value="<%= invData.inv_price %>">
                        </div>

                        <div class="form-control">
                            <label for="inv_miles">Miles</label>
                            <input id="inv_miles" name="inv_miles" type="number" required
                                value="<%= invData.inv_miles %>">
                        </div>

                        <div class="form-control">
                            <label for="inv_image">Image URL</label>
                            <input id="inv_image" name="inv_image" value="<%= invData.inv_image %>">
                        </div>

                        <div class="form-control">
                            <label for="inv_thumbnail">Thumbnail URL</label>
                            <input id="inv_thumbnail" name="inv_thumbnail" value="<%= invData.inv_thumbnail %>">
                        </div>

                        <div class="form-control">
                            <label for="inv_description">Description</label>
                            <textarea id="inv_description" name="inv_description"
                                rows="5"><%= invData.inv_description %></textarea>
                        </div>

                        <div class="form-actions" style="margin-top:1rem;">
                            <button type="submit" class="btn" disabled>Update</button>
                            <a href="/inv/" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
</section>
<script src="/js/inv-update.js" defer></script>