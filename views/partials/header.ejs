<header class="site-header">

    <a href="/">Home</a>

    <% if (loggedin && accountData) { %>
        <a class="account" href="/account/">Welcome <%= accountData.account_firstname %></a>

        <form action="/account/logout" method="post" style="display:inline">
            <button type="submit" class="linklike">Logout</button>
        </form>

        <% } else { %>
            <a href="/account/login">Login</a>
            <% } %>

</header>